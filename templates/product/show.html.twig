{% extends 'base.html.twig' %}

{% block title %}Produit - {{product.slug}}{% endblock %}

{% block content %}
    <h1>{{product.name}}</h1>
<div class='row m-5'>
    
    
        <div class = 'col-md-4'>
            <img src="/uploads/{{product.illustration }}" alt="{{product.Category }}" class='img-fluid' >
        </div>
        <div class='col-md-8'>
            <div class='produc-item text-center'>
                <span>"{{ product.subtitle }}"</span>
                <span class='product-price'>{{(product.price/100)|number_format(2, ',','.')}}€</span>
                <hr>
                <small class>{{product.description}}</small>
                <hr>
                <a href="{{path('add_to_card', {'id' : product.id}) }}" class='btn btn-primary '>Ajouter au panier</a>
            </div>
        </div>
            
        
        
    
</div>
    <span class='m-5'><a href="{{path('products')}}"> Retour</a> liste complète</span>

{% endblock %}
